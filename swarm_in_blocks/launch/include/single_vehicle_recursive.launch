<?xml version="1.0"?>

<launch>
    <arg name="num" default=""/>
    <arg name="ID" default="0"/> 
    <arg name="led" default="true"/>
    <arg name="camera" default="false"/>
    <arg name="rangefinder" default="true"/>
    <arg name="flashlight" default="false"/>
    
    <include file="$(find swarm_in_blocks)/launch/single_vehicle.launch">
        <arg name="x" value="0"/>
        <arg name="y" value="$(arg ID)"/>
        <arg name="z" value="0.3"/>
        <arg name="R" value="0"/>
        <arg name="P" value="0"/>
        <arg name="Y" value="0"/>
        <arg name="ID" value="$(arg ID)"/>
        <arg name="led" value="$(arg led)"/>
        <arg name="camera" value="$(arg camera)"/>
        <arg name="rangefinder" value="$(arg rangefinder)"/>
        <arg name="flashlight" value="$(arg flashlight)"/>
    </include>
        
    <!-- chamar outros includes recursivamente -->
    
    <include file="$(find swarm_in_blocks)/launch/include/single_vehicle_recursive.launch" if="$(eval arg('num') - 1 > 0)">
	    <arg name="num" value="$(eval arg('num')-1)"/>

        <arg name="ID" value="$(eval arg('ID')+1)" unless="$(eval arg('ID') - 9 == 0)"/>
        <arg name="ID" value="$(eval arg('ID')+2)" if="$(eval arg('ID') - 9 == 0)"/>
        <arg name="led" value="$(arg led)"/>
        <arg name="camera" value="$(arg camera)"/>
        <arg name="rangefinder" value="$(arg rangefinder)"/>
        <arg name="flashlight" value="$(arg flashlight)"/>
    </include>

    
</launch>




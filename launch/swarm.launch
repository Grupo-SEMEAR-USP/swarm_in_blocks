            <arg name="gcs_bridge" value="" />
            <arg name="web_video_server" default="false" if="$(eval type == 'jmavsim')" />
            <arg name="main_camera" default="false" if="$(eval type == 'jmavsim')" />
            <arg name="aruco" default="false" if="$(eval type == 'jmavsim')" />

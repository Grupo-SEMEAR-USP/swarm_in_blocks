            <arg name="use_clover_physics" value="$(arg use_clover_physics)" />
            <param name="use_sim_time" value="false" if="$(eval type == 'jmavsim')" />
        </include>
        <!-- Clover services -->
        <include file="$(find clover)/launch/clover.launch">
